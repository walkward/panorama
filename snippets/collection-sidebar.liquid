{% assign current_url = collection.url %}

<aside class="collection-sidebar">
    <div>
      <h5 class="collection-sidebar__title">{{ collection.title }} Categories</h5>
      <ul class="collection-sidebar-list">
        {% for tag in collection.tags %}
          {% if current_tags contains tag %}
          <li class="active-filter collection-sidebar__item-title">
            {{ tag | capitalize | replace: "-", " " | link_to_remove_tag: tag }}
          </li>
          {% else %}
          <li class="collection-sidebar__item-title">
            {{ tag | capitalize | replace: "-", " " | link_to_tag: tag }}
          </li>
          {% endif %}
        {% endfor %}
      </ul>
      <ul class="collection-sidebar-search">
        <li class="search-bar-wrapper">
          <form action="/search" method="get" class="search-bar text-center" role="search">
            <input type="hidden" name="product" >
            <input type="search" name="q" value="{{ search.terms | escape }}" placeholder="Search by item #" >
            <button type="submit" class="btn search-btn">
              <svg style="width:24px;height:24px" viewBox="0 0 24 24">
                  <path fill="#222" d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" />
              </svg>
            </button>
          </form>
        </li>
      </ul>
  </div>
</aside>
