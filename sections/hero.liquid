<div id="home-hero" class="index-section home-section">
  <div class="home-hero">
    <div id="hero--{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="hero-section">
      {% for block in section.blocks %}
        <div class="text-center">
            <a href="{{ block.settings.link }}" class="slide-link slide-link--{{ block.id }}">
              <img src="{{ block.settings.image | img_url: '1024x400', format: 'pjpg', crop: 'center' }}" alt="{{ block.settings.image.alt | escape }}" id="slide-{{ block.id }}" data-retina-src="{{ block.settings.image | img_url: '1024x400', format: 'pjpg', crop: 'center' | scale: 2 }}" class="retina-img">
            </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Hero",
  "max_blocks": 1,
  "blocks": [
    {
      "type": "image",
      "name": "hero-image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Image",
      "blocks": [

        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
